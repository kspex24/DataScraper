

 {{#each articles}} {{#if saved}}
<div class="panel">
<div class="panel-heading"> <a href={{this.link}}id="ptitle">{{this.title}}</a>
  <button type="button"  class="pull-right" data-toggle="modal" data-target="#myModal" id="noteButton" data-id={{this._id}}>Add Note</button>
<button type="button"  class="pull-right" id="delButton" data-id={{this._id}}>Remove</button>
</div>
<div class="panel-body">
  <p> {{this.summary}}</p>
 
</div>
</div>
 {{/if}} {{/each}}
  
                    

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Note</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="noteInfo">
          <div class="form-group">
            <label for="recipient-name" class="form-control-label">Title:</label>
            <input type="text" class="form-control" id="noteTitle">
          </div>
          <div class="form-group">
            <label for="message-text" class="form-control-label">Comments:</label>
            <textarea class="form-control" id="noteText"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-lg" id="closeNote" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-lg" id="submitNote">Save Note</button>
      </div>
    </div>
  </div>
</div>